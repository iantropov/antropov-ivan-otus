{
    "compilerOptions": {
      "module": "es2020",
      "moduleResolution": "Node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": false,
      "noFallthroughCasesInSwitch": false,
      "strict": true,
      "outDir": "./build"
    },
    "files": [
        "server.ts",
        "utils.ts",
        "drinks-model.ts"
    ],
}
